rules Where_clause topdown {
    import df;
    bsdf() --> diffuse_reflection_bsdf( color(0.0), 0.0);
    bsdf_tint( tint, diffuse_reflection_bsdf(c1,r1)) --> diffuse_reflection_bsdf(c,r2)
        where c = tint*c1 r2=r1;
}
