rules Attr_type_mismatch bottomup {

      material(thin_walled,
               surface,
               backface,
               ior,
               volume,
               geometry,
               hair)
      -->
        material(thin_walled,
                 surface,
                 backface,
                 ior,
                 volume,
                 geometry,
                 hair)
          [[ a = thin_walled ]]
        ;

      material(thin_walled,
               material_surface(diffuse_reflection_bsdf(t0, r0)),
               backface,
               ior,
               volume,
               geometry,
               hair)
      -->
        material(thin_walled,
                 material_surface(diffuse_reflection_bsdf(t0, r0)),
                 backface,
                 ior,
                 volume,
                 geometry,
                 hair)
          [[ a = ior ]]
        ;
}

