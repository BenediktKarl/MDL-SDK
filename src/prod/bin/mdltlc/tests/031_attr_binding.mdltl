rules Attr_Binding bottomup {
    custom_curve_layer(w1,_,_,_w,
                            bsdf() [[ diffuse_color ~ diffuse_color_layer ]],
                            bsdf() [[ diffuse_color ~ diffuse_color_base  ]],
